    // Utilities
    function $(sel, root=document){ return root.querySelector(sel); }
    function $all(sel, root=document){ return [...root.querySelectorAll(sel)]; }
    function matches(q, s){
      const query = (q ?? ($('#searchInput')?.value || '')).trim().toLowerCase();
      const str = (s ?? '').toLowerCase();
      return !query || str.includes(query);
    }
    function highlight(text, q){
      const query = (q ?? ($('#searchInput')?.value || '')).trim();
      if(!query) return text;
      const esc = query.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
      return String(text).replace(new RegExp('('+esc+')','ig'), '<mark class="px-0.5 rounded">$1</mark>');
    }

    // Tabs
    function setupTabs(){
      const tabs = $('#tabs');
      const panels = $all('#panels > div');
      if(!tabs) return;
      tabs.addEventListener('click', (e)=>{
        const btn = e.target.closest('[data-tab]');
        if(!btn) return;
        $all('#tabs > button').forEach(b=>b.classList.remove('tab-active'));
        btn.classList.add('tab-active');
        const t = btn.getAttribute('data-tab');
        panels.forEach(p=> p.classList.toggle('hidden', p.getAttribute('data-panel')!==t));
      });
    }

    // Experience
    let layout = 'cards';
    function renderExperience(){
      const q = ($('#searchInput')?.value||'').trim().toLowerCase();
      const cards = $('#experienceCards');
      const timeline = $('#experienceTimeline');
      const filtered = profile.experience.filter(ex =>
        matches(q, ex.company) || matches(q, ex.role) ||
        (ex.tags||[]).some(t=>matches(q,t)) ||
        (ex.bullets||[]).some(b=>matches(q,b))
      );
      if(!cards || !timeline) return;
      cards.innerHTML=''; timeline.innerHTML='';

      if(layout==='cards'){
        cards.classList.remove('hidden'); timeline.classList.add('hidden');
        filtered.forEach(job=>{
          const div = document.createElement('div');
          div.className = 'card luxe ring-accent p-0';
          div.innerHTML = `
            <div class="absolute right-4 top-4 text-xs text-zinc-600">${job.date}</div>
            <div class="border-b px-6 py-4">
              <div class="text-base font-semibold inline-flex items-center gap-2">
                <span class="i" data-lucide="briefcase" style="width:16px;height:16px"></span>
                ${highlight(job.role, q)}
              </div>
              <div class="text-sm text-zinc-600 pr-16">${highlight(job.company, q)}</div>
            </div>
            <div class="p-6">
              <div class="mb-3 flex flex-wrap gap-2">
                ${(job.tags||[]).map(t=>`<span class="badge cursor-pointer" data-skill="${t}">${t}</span>`).join('')}
              </div>
              <ul class="list-disc pl-5 space-y-2 text-sm leading-relaxed mt-3">
                ${(job.bullets||[]).map(b=>`<li>${highlight(b, q)}</li>`).join('')}
              </ul>
            </div>`;
          cards.appendChild(div);
        });
      } else {
        cards.classList.add('hidden'); timeline.classList.remove('hidden');
        filtered.forEach(job=>{
          const wrap = document.createElement('div');
          wrap.className = 'mb-8';
          wrap.innerHTML = `
            <div class="absolute -left-[9px] mt-1 w-3 h-3 rounded-full bg-blue-600 shadow"></div>
            <div class="flex items-center justify-between">
              <div class="font-medium">${job.role} • <span class="text-zinc-600">${job.company}</span></div>
              <div class="text-sm text-zinc-600">${job.date}</div>
            </div>
            <div class="mt-2 flex flex-wrap gap-2">
              ${(job.tags||[]).map(t=>`<span class="badge cursor-pointer" data-skill="${t}">${t}</span>`).join('')}
            </div>
            <ul class="list-disc pl-5 space-y-2 text-sm leading-relaxed mt-2">
              ${(job.bullets||[]).map(b=>`<li>${highlight(b, q)}</li>`).join('')}
            </ul>`;
          timeline.appendChild(wrap);
        });
      }

      if(window.lucide) lucide.createIcons();

      // Smooth swap animation
      const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      if(window.gsap && !prefersReduced){
        gsap.fromTo(layout==='cards'?cards:timeline,
          { opacity:0, y:10, filter:'blur(6px)' },
          { opacity:1, y:0, filter:'blur(0px)', duration:0.45, ease:'power3.out' }
        );
      }
    }

    // Projects
    function renderProjects(){
      const q = ($('#searchInput')?.value||'').trim().toLowerCase();
      const grid = $('#projectCards');
      if(!grid) return;
      grid.innerHTML='';
      const filtered = profile.projects.filter(p =>
        matches(q,p.name) || matches(q,p.date) || (p.tags||[]).some(t=>matches(q,t)) || matches(q,p.blurb)
      );
      filtered.forEach(p=>{
        const card = document.createElement('div');
        card.className = 'card luxe ring-accent p-0';
        card.innerHTML = `
          <div class="border-b px-6 py-4">
            <div class="text-base font-semibold inline-flex items-center gap-2">
              <span class="i" data-lucide="folder-git-2" style="width:16px;height:16px"></span>
              ${highlight(p.name, q)}
            </div>
            <div class="text-sm text-zinc-600">${p.date}</div>
          </div>
          <div class="p-6">
            <div class="mb-2 flex flex-wrap gap-2">
              ${(p.tags||[]).map(t=>`<span class="badge cursor-pointer" data-skill="${t}">${t}</span>`).join('')}
            </div>
            <p class="text-sm leading-relaxed">${highlight(p.blurb||'', q)}</p>
            <div class="mt-3 flex items-center gap-2">
              ${p.href ? `<a class="btn btn-primary" data-href="${p.href}">View</a>` : ''}
            </div>
          </div>`;
        grid.appendChild(card);
      });
      if(window.lucide) lucide.createIcons();
    }

    // Interactive
    function renderInteractive(){
      const grid = $('#interactiveGrid');
      if(!grid) return;
      grid.innerHTML='';
      (profile.interactiveProjects||[]).forEach(p=>{
        const card = document.createElement('div');
        card.className = 'card luxe ring-accent p-0';
        card.innerHTML = `
          <div class="border-b px-6 py-4">
            <div class="text-base font-semibold inline-flex items-center gap-2">
              <span class="i" data-lucide="code-2" style="width:16px;height:16px"></span>
              ${p.title}
            </div>
          </div>
          <div class="p-6">
            ${p.description ? `<p class="text-sm text-zinc-600 mb-3">${p.description}</p>` : ''}
            ${p.tech ? `<div class="mb-3 flex flex-wrap gap-2">${p.tech.map(t=>`<span class="badge">${t}</span>`).join('')}</div>` : ''}
            <div class="flex items-center gap-2">
              ${p.href ? `<a class="btn btn-primary" data-href="${p.href}">View</a>` : ''}
            </div>
          </div>`;
        grid.appendChild(card);
      });
      if(window.lucide) lucide.createIcons();
    }

    // Skills
    function renderSkills(){
      const tech = $('#techSkills');
      const pro = $('#proSkills');
      if(!tech || !pro) return;
      tech.innerHTML = profile.techSkills.filter(s=>matches(undefined, s)).map(s=>`<span class="badge cursor-pointer" data-skill="${s}">${s}</span>`).join('');
      pro.innerHTML  = profile.proSkills.filter(s=>matches(undefined, s)).map(s=>`<span class="badge cursor-pointer" data-skill="${s}">${s}</span>`).join('');
    }

    // Courses
    function termRank(term){
      const map={
        "Fall 2025 (IP)":2025.75,"Fall 2025":2025.75,"Spring 2025":2025.25,
        "Fall 2024 (Transfer)":2024.75,"Fall 2024":2024.75,"Spring 2024":2024.25,
        "Fall 2023":2023.75,"Summer 2023":2023.5,"Spring 2023":2023.25,"Fall 2022":2022.75
      };
      return map[term]||0;
    }
    let courseSort='term', courseCat='All';

    function renderCourses(){
      const box = $('#coursesSection');
      if(!box) return;

      const cats = profile.courses.reduce((acc,c)=>{
        acc[c.cat]=(acc[c.cat]||0)+1; return acc;
      }, {All: profile.courses.length});

      const filtered = profile.courses.filter(c =>
        (courseCat==='All' || c.cat===courseCat) &&
        matches(undefined, [c.code,c.title,c.term,c.cat].join(' '))
      );

      const sorted = [...filtered].sort((a,b)=>{
        if(courseSort==='term') return termRank(b.term)-termRank(a.term);
        if(courseSort==='az') return a.title.localeCompare(b.title);
        if(courseSort==='credits') return b.credits-a.credits;
        return 0;
      });

      box.innerHTML = `
        <div class="border-b px-6 py-4">
          <div class="text-base font-semibold inline-flex items-center gap-2">
            <span class="i" data-lucide="graduation-cap" style="width:16px;height:16px"></span>
            Completed & In-Progress Courses
          </div>
        </div>
        <div class="p-6">
          <div class="flex flex-wrap items-center gap-2 mb-4">
            ${Object.entries(cats).map(([k,v])=>`
              <span class="badge ${courseCat===k ? 'bg-zinc-900 text-white' : 'cursor-pointer'}" data-cat="${k}">
                ${k} (${v})
              </span>
            `).join('')}

            <div class="ml-auto flex items-center gap-2 text-sm">
              <span class="text-zinc-600">Sort</span>
              <select id="courseSort" class="rounded-md border bg-white px-2 py-1">
                <option value="term">By Term (new→old)</option>
                <option value="az">A → Z</option>
                <option value="credits">Credits (high→low)</option>
              </select>
            </div>
          </div>

          <div class="grid gap-3 md:grid-cols-2 lg:grid-cols-3">
            ${sorted.map(c=>`
              <div class="rounded-xl border p-4 hover:shadow-sm transition">
                <div class="flex items-center justify-between gap-2">
                  <div class="font-medium">${c.code} • ${c.title}</div>
                  <div class="flex items-center gap-2">
                    ${/\(IP\)/.test(c.term)?'<span class="chip">In progress</span>':''}
                    <span class="badge">${c.cat}</span>
                  </div>
                </div>
                <div class="mt-1 text-xs text-zinc-600">${c.term} • ${c.credits} credits</div>
              </div>
            `).join('')}
          </div>

          ${sorted.length===0 ? '<p class="text-sm text-zinc-600 mt-4">No courses match your filters.</p>' : ''}
        </div>
      `;

      $('#courseSort').value = courseSort;
      box.querySelectorAll('[data-cat]').forEach(el => el.addEventListener('click', ()=>{
        courseCat = el.getAttribute('data-cat');
        renderCourses();
      }));
      $('#courseSort').addEventListener('change', (e)=>{
        courseSort = e.target.value;
        renderCourses();
      });

      if(window.lucide) lucide.createIcons();
    }

    // Leadership
    function renderLeadership(){
      const q = ($('#searchInput')?.value||'').trim().toLowerCase();
      const list = $('#leadershipList');
      if(!list) return;
      const filtered = profile.leadership.filter(l => matches(q,l.org) || matches(q,l.role));
      list.innerHTML = filtered.map(l => `
        <div class="flex items-center justify-between rounded-xl border p-4 hover:shadow-sm transition">
          <div>
            <div class="font-medium">${highlight(l.org, q)}</div>
            <div class="text-sm text-zinc-600">${highlight(l.role, q)}</div>
          </div>
        </div>
      `).join('');
    }

    function renderAll(){
      renderExperience();
      renderProjects();
      renderInteractive();
      renderSkills();
      renderCourses();
      renderLeadership();
      if(window.lucide) lucide.createIcons();
    }

    // Global handlers
    function setupGlobalHandlers(){
      document.body.addEventListener('click', (e)=>{
        const btn = e.target.closest('[data-copy]');
        if(!btn) return;
        navigator.clipboard.writeText(btn.getAttribute('data-copy')||'');
      });

      document.body.addEventListener('click', (e)=>{
        if (e.target.closest('[data-tab]')) return;
        const a = e.target.closest('[data-href]');
        if(!a) return;
        const href = a.getAttribute('data-href');
        if(href) window.location.href = href;
      });

      $('#panels')?.addEventListener('click', (e)=>{
        const el = e.target.closest('[data-skill]');
        if(!el) return;
        $('#searchInput').value = el.getAttribute('data-skill');
        renderAll();
      });

      $('#layoutCards')?.addEventListener('click', ()=>{
        layout='cards';
        $('#layoutCards').classList.add('btn-primary');
        $('#layoutCards').classList.remove('btn-outline');
        $('#layoutTimeline').classList.remove('btn-primary');
        $('#layoutTimeline').classList.add('btn-outline');
        renderExperience();
      });

      $('#layoutTimeline')?.addEventListener('click', ()=>{
        layout='timeline';
        $('#layoutTimeline').classList.add('btn-primary');
        $('#layoutTimeline').classList.remove('btn-outline');
        $('#layoutCards').classList.remove('btn-primary');
        $('#layoutCards').classList.add('btn-outline');
        renderExperience();
      });

      setupTabs();

      $('#btnClear')?.addEventListener('click', ()=>{
        $('#searchInput').value='';
        renderAll();
      });

      $('#searchInput')?.addEventListener('keydown', (e)=>{
        if(e.key==='Enter') renderAll();
      });
    }

    document.addEventListener('DOMContentLoaded', ()=>{
      document.documentElement.classList.add('motion-ok');
      setupGlobalHandlers();
      renderAll();
      const y = $('#year');
      if(y) y.textContent = new Date().getFullYear();
      if(window.lucide) lucide.createIcons();
    });
  </script>

  <!-- EmailJS SDK -->
  <script src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>

  <script>
    const EMAILJS_PUBLIC_KEY    = "9kpZdGNL8MG-6ytuZ";
    const EMAILJS_SERVICE_ID    = "service_r9xcm0w";
    const TEMPLATE_NOTIFY_OWNER = "template_notify_owner";

    document.addEventListener('DOMContentLoaded', () => {
      emailjs.init({ publicKey: EMAILJS_PUBLIC_KEY });

      const form = document.getElementById('contactForm');
      if (!form) return;

      const statusEl  = document.getElementById('contactStatus');
      const submitBtn = document.getElementById('contactSubmit');
      const formReadyAt = Date.now();

      function setStatus(msg, ok = true) {
        if (!statusEl) return;
        statusEl.textContent = msg;
        statusEl.style.color = ok ? 'green' : 'crimson';
      }

      form.addEventListener('submit', async (e) => {
        e.preventDefault();

        // Honeypot
        if ((form.website?.value || "").trim() !== "") {
          setStatus("Submission blocked.", false);
          return;
        }

        // Small human delay
        if (Date.now() - formReadyAt < 2000) {
          setStatus("Please try again.", false);
          return;
        }

        const data = {
          from_name: form.from_name?.value?.trim() || "",
          reply_to:  form.reply_to?.value?.trim() || "",
          message:   form.message?.value?.trim() || "",
          to_name:   "Raunak Mane",
          to_email:  "raunakmane7@gmail.com"
        };

        if (submitBtn) submitBtn.disabled = true;
        setStatus("Sending…");

        try {
          await emailjs.send(EMAILJS_SERVICE_ID, TEMPLATE_NOTIFY_OWNER, data);
          setStatus("Thanks! Your message has been sent.");
          form.reset();
        } catch (err) {
          console.error(err);
          setStatus("Sorry—something went wrong. You can also email me directly.", false);
        } finally {
          if (submitBtn) submitBtn.disabled = false;
        }
      });
    });
  </script>

  <!-- ===================== CRAZY SMOOTH MOTION PACK (GSAP + microinteractions) ===================== -->
  <script>
    (function(){
      const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

      // Aura element (cursor glow)
      const aura = document.createElement('div');
      aura.id = 'aura';
      document.body.appendChild(aura);

      // Make hero card mouse-reactive
      const heroCard = document.querySelector('section .card.luxe');
      if (heroCard) heroCard.classList.add('hero-react');

      // Helper
      const lerp = (a,b,t)=>a+(b-a)*t;

      // Cursor aura + hero glow
      if(!prefersReduced){
        let ax = window.innerWidth * 0.5, ay = window.innerHeight * 0.3;
        let tx = ax, ty = ay;

        window.addEventListener('mousemove', (e)=>{
          tx = e.clientX; ty = e.clientY;

          if(heroCard){
            const r = heroCard.getBoundingClientRect();
            const hx = ((e.clientX - r.left) / r.width) * 100;
            const hy = ((e.clientY - r.top) / r.height) * 100;
            heroCard.style.setProperty('--hx', hx + '%');
            heroCard.style.setProperty('--hy', hy + '%');
          }
        }, { passive:true });

        (function tick(){
          ax = lerp(ax, tx, 0.12);
          ay = lerp(ay, ty, 0.12);
          aura.style.left = ax + 'px';
          aura.style.top  = ay + 'px';
          requestAnimationFrame(tick);
        })();
      } else {
        aura.style.display = 'none';
      }

      // Header micro-shrink on scroll
      const hdr = document.querySelector('header');
      if(hdr && !prefersReduced){
        window.addEventListener('scroll', ()=>{
          const sc = window.scrollY || 0;
          hdr.style.transform = sc > 8 ? 'translateY(0) scale(0.995)' : '';
        }, { passive:true });
      }

      // Ensure tilt shine layer exists for all cards
      document.querySelectorAll('.card').forEach(card=>{
        card.classList.add('tilt');
        if(!card.querySelector('.tilt-shine')){
          const s = document.createElement('div');
          s.className = 'tilt-shine';
          card.appendChild(s);
        }
      });

      // Card tilt (premium & subtle)
      if(!prefersReduced){
        document.querySelectorAll('.card').forEach(card=>{
          let raf = null;
          card.addEventListener('mousemove', (e)=>{
            const r = card.getBoundingClientRect();
            const px = (e.clientX - r.left) / r.width;
            const py = (e.clientY - r.top) / r.height;

            const rotY = (px - 0.5) * 8;
            const rotX = (0.5 - py) * 8;

            card.style.setProperty('--mx', (px*100)+'%');
            card.style.setProperty('--my', (py*100)+'%');

            if(raf) cancelAnimationFrame(raf);
            raf = requestAnimationFrame(()=>{
              // preserve your existing hover translateY 느낌 but add tilt
              card.style.transform = `translateY(-2px) rotateX(${rotX}deg) rotateY(${rotY}deg)`;
            });
          });

          card.addEventListener('mouseleave', ()=>{
            card.style.transform = '';
          });
        });
      }

      // Magnetic buttons
      if(!prefersReduced){
        document.querySelectorAll('.btn').forEach(btn=>{
          btn.classList.add('magnetic');
          btn.addEventListener('mousemove', (e)=>{
            const r = btn.getBoundingClientRect();
            const dx = e.clientX - (r.left + r.width/2);
            const dy = e.clientY - (r.top  + r.height/2);
            btn.classList.add('is-hovering');
            btn.style.transform = `translate(${dx*0.06}px, ${dy*0.08}px) scale(1.01)`;
          });
          btn.addEventListener('mouseleave', ()=>{
            btn.classList.remove('is-hovering');
            btn.style.transform = '';
          });
        });
      }

      // Ripple on click
      document.addEventListener('click', (e)=>{
        const btn = e.target.closest('.btn');
        if(!btn) return;
        const r = btn.getBoundingClientRect();
        const s = document.createElement('span');
        s.className = 'ripple';
        s.style.left = (e.clientX - r.left) + 'px';
        s.style.top  = (e.clientY - r.top) + 'px';
        btn.appendChild(s);
        setTimeout(()=>s.remove(), 650);
      });

      // GSAP reveal + tab transitions
      if(!window.gsap || prefersReduced) return;
      gsap.registerPlugin(ScrollTrigger);

      // Reveal animations
      const revealSelectors = ['header','section .card','#tabs','#panels > div','footer'];
      const revealTargets = revealSelectors.flatMap(sel => Array.from(document.querySelectorAll(sel)));

      revealTargets.forEach((el)=>{
        gsap.fromTo(el,
          { opacity: 0, y: 16, filter: 'blur(6px)' },
          {
            opacity: 1, y: 0, filter: 'blur(0px)',
            duration: 0.8, ease: 'power3.out',
            scrollTrigger: { trigger: el, start: 'top 92%' }
          }
        );
      });

      // Tab panel animation on click
      const tabs = document.getElementById('tabs');
      const panels = Array.from(document.querySelectorAll('#panels > div'));
      if(tabs){
        tabs.addEventListener('click', (e)=>{
          const btn = e.target.closest('[data-tab]');
          if(!btn) return;
          const key = btn.getAttribute('data-tab');
          const active = panels.find(p => p.getAttribute('data-panel') === key);
          if(!active) return;

          gsap.fromTo(active,
            { opacity: 0, y: 10, scale: 0.995, filter:'blur(6px)' },
            { opacity: 1, y: 0, scale: 1, filter:'blur(0px)', duration: 0.5, ease:'power3.out' }
          );
        });
      }
    })();
  </script>

</body>
</html>
